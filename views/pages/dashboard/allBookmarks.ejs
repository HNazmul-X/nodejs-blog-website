<%- include("../../includes/header.ejs",  {title:"login to your account"})%>

<div class="container">
	<div class="row dashboard-layout">
		<!-- imported sitebar -->
		<%- include("../dashboard/sitebar.ejs") %>

		<!-- =============================== -->
		<!-- dashbarod page content -->
		<div class="col-9 add-post-page dashboard-content">
			<div class="p-4 text-center box mb-4">
				<h2 class="text-secondary">List Of Your Post</h2>
			</div>

			<% if (bookmarks.bookmarks.length === 0) { %>
			<div class="box p-5 text-center">
				<img src="/images/Empty-pana.svg" class="w-100" alt="">
				<h5>You didn't Have any Bookmark yet</h5>
			</div>
			<% } else { %>
			<div class="row row-cols-3 row-cols-md-3">
				<% [...bookmarks.bookmarks].forEach(post => { %>

				<div class="col p-1 p-md-2 mb-3">
					<div class="card shadow-3d-1-box h-100 dashboard-card">
						<img src="<%= post.thumbnail ? post.thumbnail : "/images/blog-placeholder.png"%>" class="card-img-top" alt="<%=profile.name%>'s Post it is">
						<div class="card-body">
							<h5 class="card-title"><a href="/post/<%=post._id%>" class="text-decoration-none d-inline-block text-muted"><%= post?.title.substr(0, 30)%>...</a></h5>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
			<% } %>


		</div>
	</div>
</div>

<%- include("../../includes/footer.ejs") %>
<script src="/script/bootstrap.bundle.js"></script>
<script src="/script/defaultFrontend.js"></script>
</body>

</html>