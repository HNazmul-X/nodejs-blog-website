<%- include("../../includes/header.ejs",  {title:"login to your account"})%>

<div class="container">
    <div class="row dashboard-layout">
        <!-- imported sitebar -->
        <%- include("../dashboard/sitebar.ejs") %>

        <!-- =============================== -->
        <!-- dashbarod page content -->
        <div class="col-9 add-post-page dashboard-content mb-5">
            <div class=" mb-5  p-2 p-md-4">
                <div class="d-flex justify-content-between shadow-3d-1-box align-items-center mb-5 px-4 py-2" style="border-radius: 40px;">
                	<h3 class="text-secondary py-2">Your Recent Created Post</h3>
                	<h4><a href="/posts/" class="text-secondary text-decoration-none">View All</a></h4>
                </div>
                <% if (posts.length===0) { %>
                    <div class="p-5 mb-5 shadow-3d-1-inset">
                        
                    </div>
                <% } else{%>
                    <div class="row row-cols-3 row-cols-md-3">
                        	<% posts.forEach(post => { %>

                        	<div class="col p-1 p-md-2 mb-3">
                        		<div class="card shadow-3d-1-box h-100 dashboard-card">
                        			<img src="<%= post.thumbnail ? post.thumbnail : "/images/blog-placeholder.png"%>" class="card-img-top" alt="<%=profile.name%>'s Post it is">
                        			<div class="card-body">
                        				<h5 class="card-title"><a href="/post/<%=post._id%>" class="text-decoration-none d-inline-block text-muted"><%= post?.title.substr(0, 30)%>...</a></h5>
                        			</div>
                        		</div>
                        	</div>
                        	<% }) %>
                        </div>
                    <% } %> 
            </div>

               <div class=" mb-2 mb-md-5  p-2 p-md-4">
                   <div class="d-flex justify-content-between align-items-center shadow-3d-1-box mb-5 px-4 py-2 " style="border-radius: 40px;">
                       <h3 class="text-secondary py-2">Your Recent bookmarks</h3>
                       <h4><a href="/dashboard/bookmarks" class="text-secondary text-decoration-none">View All</a></h4>
                   </div>
                   <% if (bookmarks.length === 0) { %>
                        <div class="p-5 shadow-3d-1-inset">Opps... Here is NO Recent post</div>
                   <% } else {%>
                     <div class="row row-cols-3 row-cols-md-3">
                     	<% bookmarks.forEach(post => { %>

                     	<div class="col p-1 p-md-2 mb-3">
                     		<div class="card shadow-3d-1-box h-100 dashboard-card">
                     			<img src="<%= post.thumbnail ? post.thumbnail : "/images/blog-placeholder.png"%>" class="card-img-top" alt="<%=profile.name%>'s Post it is">
                     			<div class="card-body">
                     				<h5 class="card-title"><a href="/post/<%=post._id%>" class="text-decoration-none d-inline-block text-muted"><%= post?.title.substr(0, 30)%>...</a></h5>
                     			</div>
                     		</div>
                     	</div>
                     	<% }) %>
                     </div>
                     <% } %>
               </div>
        </div>
    </div>
</div>

<%- include("../../includes/footer.ejs") %>
<script src="/script/bootstrap.bundle.js"></script>
<script src="/script/defaultFrontend.js"></script>
</body>

</html>